        <p>Don't download the link and stenograph it</p>
        <a class="photo-link" href="#" id="photo-link">Update Photo</a>
        <img id="photo" src="placeholder.jpg" alt="Photo">
    </div>

    <script>
        // JavaScript to update the photo link
        const photoLink = document.getElementById('photo-link');
        const photo = document.getElementById('photo');

        // Replace 'placeholder.jpg' with the URL of your updated photo
        photoLink.addEventListener('click', function(event) {
            event.preventDefault(); // Prevent default link behavior
            // Update the photo source
            photo.src = 'your_updated_photo_url.jpg';
        });
    </script>
